# Database Configuration
# Get your MongoDB connection string from MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?appName=<appName>

# JWT Configuration - Access Token (short-lived)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=<random-string-64-characters>
JWT_EXPIRE=24h

# JWT Configuration - Refresh Token (long-lived)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_REFRESH_SECRET=<different-random-string-64-characters>
JWT_REFRESH_EXPIRES=7d

# Admin Credentials
# Change these default values for production
ADMIN_NAME=Admin Officer
ADMIN_USERNAME=admin
ADMIN_PASSWORD=<secure-password-min-8-chars>

# Staff Credentials (optional - for seeding staff user)
# Change these default values for production
STAFF_NAME=Staff Officer
STAFF_USERNAME=staff
STAFF_PASSWORD=<secure-password-min-8-chars>

# NextAuth Configuration
# For production: use your actual domain (e.g., https://yourdomain.com)
NEXTAUTH_URL=http://localhost:3000
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET=<random-string-64-characters>
